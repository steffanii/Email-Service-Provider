{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "CommonJS",                   
    "rootDir": "src",                       
    "outDir": "dist",                      
    "strict": true,                         
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,                 
    "resolveJsonModule": true,             
    "noImplicitAny": true                  
  },
  "include": ["src"],                       
  "exclude": ["node_modules"]               
}
